                </div>*@
            </div>
        </div>
    </section>
    <form id="formWed">
        <section class="pt-0 mt-0 mb-0" style="background-color: #ceaa78;">
            <div class="container" data-aos="fade-up" data-aos-delay="200">
                <div class="col-lg-12 row text-center mt-5">
                    <h2 class="font-opensans fw-normal text-white">
                        <b>REQUEST FOR A PROPOSAL</b>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-lg-6 text-center order-1 order-lg-1" style="border-right:solid;color:white;">
                        <div class="col-md-12 mb-3">
                            <input class="input-oval form-control" placeholder="FULL NAME OF GROOM" name="groomFullName" id="groomFullName" required />
                            @*@Html.TextBoxFor(m => m.GroomFullName, new { placeholder = "FULL NAME OF GROOM", @class = "input-oval form-control" })*@
                        </div>
                        <div class="row">
                            <div class="col-lg-9 mb-3">
                                <input class="input-oval form-control" type="email" placeholder="EMAIL ADDRESS" name="groomEmail" id="groomEmail" required />
                                @*@Html.TextBoxFor(m => m.GroomEmail, new { placeholder = "EMAIL ADDRESS", @class = "input-oval form-control" })*@
                            </div>
                            <div class="col-lg-3 mb-3">
                                <input class="input-oval form-control" name="groomAge" id="groomAge" placeholder="AGE" type="number" required />
                                @*@Html.TextBoxFor(m => m.GroomAge, new { placeholder = "AGE", @type = "number", @class = "input-oval form-control" })*@
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <input class="input-oval form-control" placeholder="NATIONALITY" name="groomNationality" id="groomNationality" required />
                                @*@Html.TextBoxFor(m => m.GroomNationality, new { placeholder = "NATIONALITY", @class = "input-oval form-control" })*@
                            </div>
                            <div class="col-lg-6 mb-3">
                                <input class="input-oval form-control" placeholder="CONTACT NUMBER" type="number" name="groomContactNumber" id="groomContactNumber" required />
                                @*@Html.TextBoxFor(m => m.GroomContactNumber, new { placeholder = "CONTACT NUMBER", @type = "number", @class = "input-oval form-control" })*@
                            </div>
                        </div>
                        <div class="col-lg-12 mb-3">
                            <input class="input-oval form-control" placeholder="RESIDENT ADDRESS" name="groomAddress" id="groomAddress" required />
                            @*@Html.TextBoxFor(m => m.GroomAddress, new { placeholder = "RESIDENT ADDRESS", @class = "input-oval form-control" })*@
                        </div>
                    </div>
                    <div class="col-lg-6 text-center order-2 order-lg-2">
                        <div class="col-lg-12 mb-3">
                            <input class="input-oval form-control" placeholder="FULL NAME OF BRIDE" name="brideFullName" id="brideFullName" required />
                            @*@Html.TextBoxFor(m => m.BrideFullName, new { placeholder = "FULL NAME OF BRIDE", @class = "input-oval form-control" })*@
                        </div>
                        <div class="row">
                            <div class="col-lg-9 mb-3">
                                <input class="input-oval form-control" placeholder="EMAIL ADDRESS" type="email" name="brideEmail" id="brideEmail" required />
                                @*@Html.TextBoxFor(m => m.BrideEmail, new { placeholder = "EMAIL ADDRESS", @class = "input-oval form-control" })*@
                            </div>
                            <div class="col-lg-3 mb-3">
                                <input class="input-oval form-control" placeholder="AGE" type="number" name="brideAge" id="brideAge" />
                                @*@Html.TextBoxFor(m => m.BrideAge, new { placeholder = "Age", @type = "number", @class = "input-oval form-control" })*@
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <input class="input-oval form-control" placeholder="NATIONALITY" name="brideNationality" id="brideNationality" required />
                                @*@Html.TextBoxFor(m => m.BrideNationality, new { placeholder = "NATIONALITY", @class = "input-oval form-control" })*@
                            </div>
                            <div class="col-lg-6 mb-3">
                                <input class="input-oval form-control" placeholder="CONTACT NUMBER" type="number" name="brideContactNumber" id="brideContactNumber" required />
                                @*@Html.TextBoxFor(m => m.BrideContactNumber, new { placeholder = "CONTACT NUMBER", @type = "number", @class = "input-oval form-control" })*@
                            </div>
                        </div>

                        <div class="col-lg-12 mb-3">
                            <input class="input-oval form-control" placeholder="RESIDENT ADDRESS" name="brideAddress" id="brideAddress" required />
                            @*@Html.TextBoxFor(m => m.BrideAddress, new { placeholder = "RESIDENT ADDRESS", @class = "input-oval form-control" })*@
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 text-center pl-pr-100 mb-3">
                    <div class="form-check mt-2 form-check-inline text-white">
                        TYPE OF CEREMONY:
                    </div>
                    <div class="form-check form-check-inline mt-2">
                        <input class="form-check-input" type="radio" name="typeOfCeremony" id="catholic" value="Catholic">
                        @*@Html.RadioButtonFor(m => m.TypeOfCeremony, "Catholic", new { id = "flexRadioDefault1", @class = "form-check-input" })*@
                        <label class="form-check-label  text-white" for="catholic">
                            Catholic
                        </label>
                    </div>

                    <div class="form-check form-check-inline mt-2">
                        <input class="form-check-input" type="radio" name="typeOfCeremony" id="christian" value="Christian">
                        @*@Html.RadioButtonFor(m => m.TypeOfCeremony, "Christian", new { id = "flexRadioDefault2", @class = "form-check-input" })*@
                        <label class="form-check-label text-white" for="christian">
                            Christian
                        </label>
                    </div>

                    <div class="form-check form-check-inline mt-2">
                        <input class="form-check-input" type="radio" name="typeOfCeremony" id="civil" value="Civil">
                        @*@Html.RadioButtonFor(m => m.TypeOfCeremony, "Civil", new { id = "flexRadioDefault3", @class = "form-check-input" })*@
                        <label class="form-check-label text-white" for="civil">
                            Civil
                        </label>
                    </div>
                    <div class="form-check form-check-inline text-white mt-2">
                        NUMBER OF GUEST:
                        <div class="form-check-inline">
                            <input class="form-control input-oval" type="number" name="numberOfGuest" id="numberOfGuest" required />
                            @*@Html.TextBoxFor(m => m.NumberOfGuest, new { @type = "number", @class = "input-oval form-control" })*@
                        </div>
                    </div>
                    
                </div>
                <div class="col-lg-12 mb-3 pl-pr-100">
                    <div class="container text-center ">
                        <div class="col-md-12" pl-pr-100">
                            <div class="form-check form-check-inline text-white">
                                DATE OF WEDDING:
                                <div class="form-check-inline">
                                    <input class="form-control input-oval" placeholder="DD/MM/YYYY" type="date" name="dateOfWedding" id="dateOfWedding" required />
                                    @*@Html.TextBoxFor(m => m.DateOfWedding, new { placeholder = "DD/MM/YYYY", @type = "date", @class = "input-oval form-control" })*@
                                </div>
                            </div>
                            <div class="form-check form-check-inline text-white">
                                TIME OF CEREMONY:
                                <div class="form-check-inline">
                                    <input class="form-control input-oval" placeholder="DD/MM/YYYY" type="time" name="timeOfCeremony" id="timeOfCeremony" required />
                                    @*@Html.TextBoxFor(m => m.TimeOfCeremony, new { placeholder = "00-00-00", @type = "time", @class = "input-oval form-control" })*@
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-12 text-center pl-pr-100">
                    <div class="col-md-12">
                        <button type="submit" class="btn-lc-submit" id="btnSubmit">SUBMIT </button>
                    </div>
                </div>
            </div>
        </section>

    </form>
</main>
<script>
    var base_url = window.location.origin;
    const form = document.getElementById('formWed')

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            document.forms["typeOfCeremony"] = document.querySelector('input[name="typeOfCeremony"]:checked').value;
            // API
            try {
               
                const response = await fetch(base_url + '/Weddings/Inquire', {
                    method: 'POST',
                    body: new FormData(form)
                })
                    const res = await response.json();
                    if (!response.ok) {
                        throw { response, res }
                    } else {
                        alert("Thank you, your request has been submitted successfully");
                        form.reset();
                    }
            } catch (error) {
                alert(error);
                //alert("username or password is incorrect");
            } finally {
                //commit("setLoading", false)
            }
            form.setAttribute("style", "pointer-events: auto;");

            btnSubmit.innerHTML = 'Submit';
        });
</script>

